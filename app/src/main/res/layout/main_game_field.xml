<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="354dp"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/shadow1"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:src="@drawable/shadow_mini"
        android:layout_marginBottom="55dp"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/joker1"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:src="@drawable/joker_mini"
        android:layout_marginBottom="90dp"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/shadow2"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:src="@drawable/shadow_mini"
        android:layout_marginBottom="55dp"
        android:layout_gravity="bottom|center" />

    <ImageView
        android:id="@+id/joker2"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:src="@drawable/joker_mini"
        android:layout_marginBottom="90dp"
        android:layout_gravity="bottom|center" />

    <ImageView
        android:id="@+id/shadow3"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:src="@drawable/shadow_mini"
        android:layout_marginBottom="55dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="bottom|right" />

    <ImageView
        android:id="@+id/joker3"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:src="@drawable/joker_mini"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="bottom|right" />

    <ImageView
        android:id="@+id/thrimble1"
        android:layout_width="118dp"
        android:layout_height="139dp"
        android:layout_marginBottom="70dp"
        android:layout_gravity="bottom|left"
        android:visibility="invisible"
        android:src="@drawable/thimble"/>

    <ImageView
        android:id="@+id/thrimble2"
        android:layout_width="118dp"
        android:layout_height="139dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="70dp"
        android:visibility="invisible"
        android:src="@drawable/thimble" />

    <ImageView
        android:id="@+id/thrimble3"
        android:layout_width="118dp"
        android:layout_height="139dp"
        android:layout_marginBottom="70dp"
        android:layout_gravity="right|bottom"
        android:visibility="invisible"
        android:src="@drawable/thimble"/>
</FrameLayout>
